# AI Provider Selection
# Options: "gemini" or "openai"
AI_PROVIDER=gemini

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:8080

# Backend Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Gemini Model Settings
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.9
GEMINI_MAX_TOKENS_OVERVIEW=500
GEMINI_MAX_TOKENS_DETAIL=2000

# OpenAI Model Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS_OVERVIEW=500
OPENAI_MAX_TOKENS_DETAIL=2000

# Transcript Processing Limits
TRANSCRIPT_LIMIT_OVERVIEW=8000
TRANSCRIPT_LIMIT_DETAIL=12000

# YouTube API (Optional - for anti-blocking)
# Get cookies from browser: F12 -> Application -> Cookies -> youtube.com
# Format: cookie1=value1; cookie2=value2
YOUTUBE_COOKIES=
